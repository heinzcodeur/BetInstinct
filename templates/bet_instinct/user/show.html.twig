{{ include('head.html.twig') }}

{% block body %}
    <h2 class="text-center">{{user.prenom}} {{ user.nom }}</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Birth_date</th>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ user.profession }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>solde</th>
                <td>{{ user.solde.balance }}</td>
                <td><a href="{{ path('bet_instinct_transaction_new') }}" class="btn btn-success">d√©poser</a></td>
            </tr>
            <tr>
                <th>mes transactions</th>
                {% for t in user.transactions %}
                <td> {{ dump(t) }} </td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <div class="col text-center">
    <a href="{{ path('home') }}" class="btn btn-secondary">retour</a>

    <a href="{{ path('bet_instinct_user_edit', {'id': user.id}) }}" class="btn btn-success">modifier</a>
    </div>
{% endblock %}

