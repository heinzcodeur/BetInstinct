{{include ('head.html.twig')}}

{% block body %}
    <h3 class="text-center">User index</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>

                <th>IsVerified</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Profession</th>
                <th>Nickname</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <!--<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>-->
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
               <!-- <td>{{ user.birthDate ? user.birthDate|date('Y-m-d H:i:s') : '' }}</td>-->
                <td>{{ user.profession }}</td>
                <td>{{ user.nickname }}</td>
                <td>
                    <a href="{{ path('bet_instinct_user_show', {'id': user.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('bet_instinct_user_edit', {'id': user.id}) }}" class="btn btn-success">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
