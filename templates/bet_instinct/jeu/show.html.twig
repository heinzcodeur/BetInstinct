{{ include('head.html.twig') }}

{% block body %}
    <h3 class="text-center">Jeu n°{{ jeu.id }} </h3>

    {{ dump(jeu) }}

    <table class="table">
        <tbody>
        <tr>
            <th>auteur</th>
            <td>{{ jeu.pronostic.author.nickname|capitalize }}</td>
        </tr>
       <tr>
            <th>date</th>
            <td>{{ jeu.createdAt|date('d-m-Y H:m:s') }}</td>
        </tr>
       <tr>
            <th>formule</th>
            <td>{{ jeu.formule }}</td>
        </tr>
       <!--<tr>
            <th>match</th>
            <td>{{ jeu.pronostic.bet.affiche|upper }}</td>
        </tr>-->
       <!-- <tr>
            <th>type de pari</th>
            <td>{{ jeu.pronostic.bet.TypedePari|upper }}</td>
            <td>{{ jeu.pronostic.bet.affiche }}</td>
        </tr>-->

        <tr onclick="document.location='{{ path('bet_instinct_pronostic_show',{'id':jeu.pronostic.id}) }}'" class="cursor">
            <th>pronostic</th>
            <td class="font-weight-bold">
                {% if jeu.pronostic.bet.TypedePari.type2choix == 'Vainqueur'%}

                       <i class="text-secondary"> {{ jeu.pronostic.bet.affiche }}</i>
                        <span class="text-primary">{{ jeu.pronostic.bet.TypedePari|upper }}</span>
                        /<span class="text-success">{{ jeu.pronostic.choix }}</span>

                    {% else %}
                       <i class="text-secondary"> {{ jeu.pronostic.bet.affiche }}</i>
                        <span class="text-primary" >{{ jeu.pronostic.bet.TypedePari }}</span>
                        <span class="text-info">{{ jeu.pronostic.choix|upper }}</span>
               {% endif %}
            </td>
        </tr>
        {% if jeu.pronostic2 is not null %}
        <tr onclick="document.location='{{ path('bet_instinct_pronostic_show',{'id':jeu.pronostic2.id}) }}'" class="cursor">
            <th>pronostic2</th>
            <td class="font-weight-bold">
                <i class="text-secondary">{{ jeu.pronostic2.bet.affiche }}</i>
                <span class="text-primary">{{ jeu.pronostic.bet.TypedePari }}</span>
                <span class="text-info">{{ jeu.pronostic.choix|upper }}</span>
            </td>
        </tr>
        {% endif %}
        {% if jeu.pronostic3 is not null %}
        <tr onclick="document.location='{{ path('bet_instinct_pronostic_show',{'id':jeu.pronostic3.id}) }}'" class="cursor">
            <th>pronostic3</th>
            <td class="font-weight-bold">
                <i class="text-secondary">{{ jeu.pronostic3.bet.affiche }}</i>
                <span class="text-primary">{{ jeu.pronostic3.bet.TypedePari }}</span>
                <span class="text-info">{{ jeu.pronostic3.choix|upper }}</span>

            </td>
        </tr>
        {% endif %}
        <tr>
            <th>mise</th>
            <td>{{ jeu.mise }} €</td>
        </tr>
        <tr>
            <th>cote totale</th>
            <td><span class="font-weight-bold">{{ jeu.pronostic.cote }}</span></td>
        </tr>
        <tr>
            <th>gains potentiel</th>
            <td><span class="font-weight-bold">{{ jeu.pronostic.cote * jeu.mise}} €</span></td>
        </tr>
        <tr>
            <th>résultat</th>
            <td><span class="font-weight-bold">{{ jeu.resultat}} </span></td>
        </tr>
        </tbody>
    </table>
<div class="col text-center">
    <a href="{{ path('bet_instinct_jeu_index') }}" class="btn btn-primary">retour</a>

    <a href="{{ path('bet_instinct_jeu_edit', {'id': jeu.id}) }}" class="btn btn-success" >modifier</a>
</div>
{% endblock %}
