{% extends 'base.html.twig' %}

{% block title %}Document index{% endblock %}

{% block body %}
    <h1>Document index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom_document</th>
                <th>File</th>
                <th>Filename</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.nomDocument }}</td>
                <td>{{ document.file }}</td>
                <td>{{ document.filename }}</td>
                <td>
                    <a href="{{ path('bet_instinct_document_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('bet_instinct_document_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bet_instinct_document_new') }}">Create new</a>
{% endblock %}
