{% block body %}

    <h1>Athlete index</h1>
    <div class="col text-right mb-2">

    <a href="{{ path('bet_instinct_athlete_new') }}" class="btn btn-primary pull-right">nouveau</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Birthdate</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for athlete in athletes %}
            <tr>
                <td>{{ athlete.id }}</td>
                <td>{{ athlete.nom }}</td>
                <td>{{ athlete.prenom }}</td>
                <td>{{ athlete.birthdate ? athlete.birthdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ athlete.taille }}</td>
                <td>
                    <a href="{{ path('bet_instinct_athlete_show', {'id': athlete.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('bet_instinct_athlete_edit', {'id': athlete.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{include('end.html.twig')}}

{% endblock %}
