{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4 mt-4">
                <img src="{{ asset('/images/athletes/'~athlete.avatar) }}" alt="{{ athlete.nom }}" style="max-height: 100%;max-width: 100%;">
            </div>
            <div class="col-md-8 bg-light mt-4 rounded-bottom rounded-top mb-4" style="overflow-x: scroll">
                <h1>Athlete</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Nom</th>
                        <td class="font-weight-bold">{{ athlete.nom|upper }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ athlete.prenom|capitalize }}</td>
                    </tr>
                    <tr>
                        <th>Birthdate</th>
                        <td>{{ athlete.birthdate ? athlete.birthdate|date('d-m-Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Taille</th>
                        <td>{{ athlete.taille }} m</td>
                    </tr>
                    <tr>
                        <th>ranking</th>
                        <td>{{ athlete.ranking.association.name }} {{ athlete.ranking.ranking }}  </td>
                    </tr>
<tr>
                        <th>genre</th>
                        <td>{{ athlete.genre }}  </td>
                    </tr>
<tr>
                        <th>nationalit√©</th>
                        <td>{{ athlete.pays }}  </td>
                    </tr>
<tr>
                        <th>age</th>
                        <td>{{ ((date().timestamp - athlete.birthdate.timestamp )/60/60/24/365)|round }}  </td>
                    </tr>

                    </tbody>
                </table>

                <a href="{{ path('bet_instinct_athlete_index') }}" class="btn btn-primary mb-2">retour</a>

                <a href="{{ path('bet_instinct_athlete_edit', {'id': athlete.id}) }}" class="btn btn-success mb-2">modifier</a>

            </div>

        </div>
    </div>
{% endblock %}
