{% extends 'base.html.twig' %}
{% block body %}
<div class="container" style="margin-top: 90px;background-color: #fff;border-radius:5px" >
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center">
                <img src="{{ asset('images/logo-nba.png') }}" alt="logonba" width="25" height="55">
                {{ tournoi.name }} - {{ tournoi.equipes|length }} Ã©quipes</h2>

        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped">
                <tbody>
                {% for a in tournoi.affiches %}
                <tr onclick="document.location='{{ path("bet_instinct_affiche_show",{'id':a.id}) }}'" class="cursor">
                    <td>{{ a}}</td>
                </tr>
               {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-6">

            <table>
                <tbody>
                {% for e in tournoi.equipes %}
                    <tr>
                        <th><img src="{{ asset('betinstinct.png') }}" width="50" HEIGHT="50" alt=""></th>
                        <td onclick="document.location='{{ path('bet_instinct_equipe_show',{'id':e.id}) }}'"
                            class='cursor'>{{ e }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

        </div>

        <div class="col text-center">
            <a href="{{ path('bet_instinct_tournoi_index') }}" class="btn btn-primary">retour</a>

            <a href="{{ path('bet_instinct_tournoi_edit', {'id': tournoi.id}) }}" class="btn btn-success">edit</a>

            <a href="{{ path('bet_instinct_affiche_new') }}" class="btn btn-secondary">add match</a>
            <a href="{{ path('bet_instinct_equipe_new') }}" class="btn btn-info">add team</a>

        </div>
    </div>
</div>
    {% endblock %}
