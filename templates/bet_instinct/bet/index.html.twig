{% block body %}
    <h1>Bet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>type</th>
                <th>affiche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bet in bets %}
            <tr>
                <td>{{ bet.TypedePari.type2choix }}</td>
                <td style="cursor: pointer" onclick="document.location='{{ path('bet_instinct_affiche_show',{'id':bet.affiche.id}) }}'">{{ bet.affiche}}</td>
                <td>
                    <a href="{{ path('bet_instinct_bet_show', {'id': bet.id}) }}">show</a>
                    <a href="{{ path('bet_instinct_bet_edit', {'id': bet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bet_instinct_bet_new') }}">Create new</a>

    {{include('end.html.twig')}}

{% endblock %}
